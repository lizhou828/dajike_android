<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--获得焦点后和点击后，64毫秒闪现的背景-->
    <item android:state_focused="true" android:state_enabled="true" android:state_pressed="false" android:drawable="@drawable/home_btn_bg_s"/>
    <item android:state_pressed="true" android:state_enabled="true" android:drawable="@drawable/home_btn_bg_s"/>

    <!--选中当前tab 背景改变-->
    <item android:state_checked="true" android:state_enabled="true" android:drawable="@drawable/home_btn_bg_d"/>

    <!--默认 灰色背景布局-->
    <item android:drawable="@drawable/transparent"/>
</selector>